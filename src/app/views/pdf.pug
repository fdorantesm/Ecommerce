    style.
        html{
          width:100%;
          height:100%;
          font-size: 10px;
          font-family: sans-serif;
        }
        body{
          margin:0;
          height:100%;
          width:100%;
        }
        .page{
          background-image: url("https://res.cloudinary.com/merengue-merengue/image/upload/v1539278685/MM/static/recibo.png");
          background-size: cover;
          height: 100%;
          width: 100%;
          display: block;
          page-break-after: auto;
        }
        .page .content {
          position: absolute;
          width: 100%;
          height: 60%;
          left: 0;
          right: 0;
          top: 30mm;
          bottom: 0;
          margin: auto;
        }
        table{
          width:100%;
          border-collapse: collapse;
          margin: 8px 0;
        }
        table.table tr td,
        table.table tr th {
          padding:2mm;
          font-size:12px;
          text-align: center;
          /*font-weight:bold;*/
        }
        table.table-bordered tr td,
        table.table-bordered tr th {
          border:0.5px solid #000;
        }
        table.table tbody tr:nth-child(odd){
          background: #F7F7F7;
        }
        table.table tbody tr:nth-child(even){
          background: #FFF;
        }
        .text-center {
          text-align: center;
        }
        .text-right {
          text-align: right;
        }
        .float-left {
          float: left;
        }
        .float-right {
          float: right;
        }
        .display-inline {
          display: inline-block;
        }
        .col-6 {
          width: 50%;
        }
        .container {
          max-width: 80%;
          margin: auto;
        }
