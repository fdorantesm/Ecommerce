{
  "plugins": [
    ["module-resolver", {
      "root": ["./"],
      "alias": {
        // paths
        "bin": "./bin",
        "config": "./app/config",
        "model": "./app/models",
        "controller": "./app/http/controllers",
        "middleware": "./app/http/middlewares",
        "route": "./app/http/routes",
        "locale": "./app/locales",
        "log": "./app/logs",
        "library": "./app/libraries",
        "helper": "./app/helpers",
        "view": "./app/views",
        // modules
        "app": "./app/index",
        "events": "./app/events",
        "loader": "./app/loader",
        "router": "./app/libraries/router",
        "routes": "./app/http/router.js",
        "www": "./bin/www",
        "server": "./bin/server"
      }
    }]
  ]
}